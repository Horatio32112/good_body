<!-- app/views/register_account/index.html.erb -->
<div class="container">
  <div class="row">
    <div class="col-lg-12 mt-5">
      <div class="mx-auto mt-5" style="width: 400px">
        <%= form_with(url: submit_path, method: 'post', local: true) do %>
          <div class="form-group">
            <%= label_tag :country, 'Register'%><br>
            <%= text_field_tag :account, nil, placeholder: 'account', class: 'form-control' %>
            <%= text_field_tag :password, nil, placeholder: 'password', class: 'form-control' %>
            <%= text_field_tag :email, nil, placeholder: 'email', class: 'form-control' %>
            <%= text_field_tag :phone_number, nil, placeholder: 'phone number', class: 'form-control' %>
            <%= text_field_tag :name, nil, placeholder: 'name', class: 'form-control' %>
            <%= text_field_tag :gender, nil, placeholder: 'gender', class: 'form-control' %>
            <%= text_field_tag :age, nil, placeholder: 'age', class: 'form-control' %>
            <%= text_field_tag :height, nil,  placeholder: 'height', class: 'form-control' %>
            <%= text_field_tag :weight, nil, placeholder: 'weight', class: 'form-control' %>
          </div>
          <%= button_tag 'Search', class: 'btn btn-success btn-block' %>
        <% end %>
      </div>
    </div>
  </div>
</div>