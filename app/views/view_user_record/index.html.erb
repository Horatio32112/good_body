<!-- app/views/register_account/index.html.erb -->

<% flash.each do |type, msg| %>
    <div>
      <%= msg %>
    </div>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-lg-12 mt-5">
      <div class="mx-auto mt-5" style="width: 400px">
        <%= form_with(url: view_path, method: 'post', local: true) do %>
          <div class="form-group">
            <%= label_tag :country, 'find user'%><br>
            <%= text_field_tag :account, nil, placeholder: 'account', class: 'form-control' %>
          </div>
          <%= button_tag 'Search', class: 'btn btn-success btn-block' %>
        <% end %>
      </div>
    </div>
  </div>
</div>